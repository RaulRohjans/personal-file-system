<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox onKeyReleased="#onKeyRelease" prefHeight="174.0" prefWidth="363.0" style="-fx-padding: 8;"
      xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.rohjans.controllers.FileCreationController" fx:id="fileCreationRoot">
   <children>
      <VBox>
         <VBox prefHeight="360.0" prefWidth="423.0" style="-fx-alignment: center-left;">
            <Label style="-fx-padding: 0 0 4 0;" text="Name:"/>
            <TextField fx:id="txtText"/>
         </VBox>
         <VBox prefHeight="360.0" prefWidth="423.0" style="-fx-alignment: center-left; -fx-padding: 0 0 16 0;">
            <Label style="-fx-padding: 0 0 4 0;" text="Importance:"/>
            <TextField fx:id="txtImportance"/>
         </VBox>
      </VBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
          <Button mnemonicParsing="false" onAction="#onOk" text="Ok" />
        </buttons>
      </ButtonBar>
   </children>
</VBox>
