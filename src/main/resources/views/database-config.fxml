<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="121.0" prefWidth="363.0" style="-fx-padding: 8;" xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rohjans.controllers.DatabaseConfigController"
      onKeyReleased="#onKeyRelease" fx:id="dbconfigRoot">
   <children>
      <HBox style="-fx-alignment: center; -fx-padding: 0 0 8 0;">
         <children>
            <VBox prefHeight="360.0" prefWidth="423.0" style="-fx-alignment: center-left;">
               <children>
                    <Label style="-fx-padding: 0 0 4 0;" text="Hostname:" />
                    <TextField fx:id="txtHostname" />

                    <Label style="-fx-padding: 4 0 4 0;" text="Port:" />
                    <TextField fx:id="txtPort" />

                    <Label style="-fx-padding: 4 0 4 0;" text="Username:" />
                    <TextField fx:id="txtUsername" />

                    <Label style="-fx-padding: 4 0 4 0;" text="Password:" />
                    <TextField fx:id="txtPassword" />
               </children>
            </VBox>
         </children>
      </HBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button mnemonicParsing="false" text="Cancel" fx:id="btnCancel" onAction="#onCancel" />
          <Button mnemonicParsing="false" text="Ok" onAction="#onOk" />
        </buttons>
      </ButtonBar>
   </children>
</VBox>
